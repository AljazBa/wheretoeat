.panel.panel-default
  .panel-heading
    %h3.panel-title
      Votes
  %table.table.table-bordered.table-hover.table-condensed
    %thead
      %tr
        %td Restaurant
        %td Menu
        %td Username
    - @menus.each do |_, menu|
      %tr{class: ('success' if menu[:restaurant_id] == @top_restaurant_id)}
        %td
          = menu[:restaurant_name]
        %td
          - if menu[:text].present?
            = "#{menu[:voters].length} x #{menu[:text]}"
        %td
          = menu[:voters].join(', ')
